<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.openweather.openweather.AirActuvuty.PM25Fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2e6c8">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:layout_width="180dp"
            android:layout_height="180dp"
            custom:arc_bottom_text="PM2.5"
            custom:arc_bottom_text_size="20dp"
            custom:arc_finished_color="#1561bf"
            custom:arc_max="90"
            custom:arc_progress="54"
            custom:arc_stroke_width="6dp"
            custom:arc_suffix_text=" μg/m3"
            custom:arc_suffix_text_padding="17dp"
            custom:arc_text_size="70dp"
            custom:arc_unfinished_color="#fff" />

        <TextView
            android:id="@+id/tvPM25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="細懸浮微粒\nPM2.5"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/round_box_air3"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_below="@+id/tvPM25"
            android:layout_alignRight="@+id/tvPM25"
            android:layout_alignEnd="@+id/tvPM25"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tvStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="高"
                android:textColor="#0d0d0d"
                android:textSize="20dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#222123"
            android:text="一般民眾活動建議:\n\n任何人如果有不適，如眼痛，咳嗽或喉嚨痛等，應該考慮減少戶外活動。"
            android:textStyle="bold"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="330dp"
            android:layout_height="140dp"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="敏感性族群活動建議:\n\n1. 有心臟、呼吸道及心血管疾病的成人與孩童，應減少體力消耗，特別是減少戶外活動。\n2. 老年人應減少體力消耗。\n3. 具有氣喘的人可能需增加使用吸入劑的頻率。"
            android:textColor="#222123"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPublishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="最後更新時間2017-04-26 12:01"
            android:textSize="10sp" />
    </RelativeLayout>

</FrameLayout>
